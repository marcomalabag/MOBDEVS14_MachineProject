<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6C1C1"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/activity_registration_tv_RegistrationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Sign Up"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_registration_tv_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Username:"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/activity_registration_tv_RegistrationTitle"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_tv_RegistrationTitle" />


    <TextView
        android:id="@+id/activity_registration_tv_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Password:"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/activity_registration_tv_Username"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/activity_registration_tv_Username"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_tv_Username" />

    <TextView
        android:id="@+id/activity_registration_tv_ConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Confirm Password:"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/activity_registration_tv_Password"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="@+id/activity_registration_tv_Password"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_tv_Password" />

    <TextView
        android:id="@+id/activity_registration_tv_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Email:"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/activity_registration_tv_Bios"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_registration_tv_Bios"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_tv_Bios" />

    <TextView
        android:id="@+id/activity_registration_tv_Bios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Bios:"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/activity_registration_tv_ConfirmPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_registration_tv_ConfirmPassword"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_tv_ConfirmPassword" />

    <EditText
        android:id="@+id/activity_registration_et_Username"
        android:layout_width="202dp"
        android:layout_height="30dp"
        android:background="@color/white"

        android:hint="Username:"
        android:inputType="textPersonName"
        android:text=""
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/activity_registration_tv_Username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toEndOf="@+id/activity_registration_tv_Username"
        app:layout_constraintTop_toTopOf="@+id/activity_registration_tv_Username"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/activity_registration_et_Password"
        android:layout_width="202dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:background="@color/white"
        android:hint="Password:"
        android:inputType="textPassword"
        android:text=""
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/activity_registration_tv_Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_registration_tv_Password"
        app:layout_constraintTop_toTopOf="@+id/activity_registration_tv_Password" />

    <EditText
        android:id="@+id/activity_registration_et_ConfirmPassword"
        android:layout_width="202dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:hint="Confirm Password:"
        android:inputType="textPassword"
        android:text=""
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/activity_registration_tv_ConfirmPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_registration_tv_ConfirmPassword"
        app:layout_constraintTop_toTopOf="@+id/activity_registration_tv_ConfirmPassword" />

    <Button
        android:id="@+id/activity_registration_btn_registration"
        android:layout_width="131dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:text="Submit"
        android:textSize="18sp"
        app:backgroundTint="#1AC3C3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_et_Bios1" />

    <EditText
        android:id="@+id/activity_registration_et_Username1"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_tv_RegistrationTitle" />

    <EditText
        android:id="@+id/activity_registration_et_Password1"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_et_Username1" />

    <EditText
        android:id="@+id/activity_registration_et_ConfirmPassword1"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_et_Email1" />

    <EditText
        android:id="@+id/activity_registration_et_Email1"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_tv_RegistrationTitle" />

    <EditText
        android:id="@+id/activity_registration_et_Bios1"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:gravity="start|top"
        android:hint="About Yourself"
        android:inputType="textMultiLine"
        android:maxLines="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_registration_et_Password1" />

</androidx.constraintlayout.widget.ConstraintLayout>