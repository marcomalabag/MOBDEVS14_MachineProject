<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadMeme">

    <Spinner
        android:id="@+id/spinner_catergory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_chooseFile"
        android:layout_alignTop="@+id/btn_chooseFile"
        android:layout_alignEnd="@+id/btn_chooseFile"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="2dp" />

    <Button
        android:id="@+id/btn_chooseFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose File" />





    <EditText
        android:id="@+id/et_filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_chooseFile"
        android:hint="Enter file name"
        android:layout_marginStart="16dp"
        />

    <Button
        android:id="@+id/btn_Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Upload" />

    <ImageView
        android:id="@+id/iv_displayupload"
        android:layout_width="382dp"
        android:layout_height="517dp"
        android:layout_above="@id/pd_loading"
        android:layout_below="@id/et_filename"
        android:layout_marginTop="57dp" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/pd_loading"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_above="@id/btn_Upload"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_showUploads"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBaseline="@id/btn_Upload"
        android:layout_alignTop="@id/btn_Upload"
        android:layout_alignBottom="@id/btn_Upload"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-6dp"
        android:layout_toEndOf="@id/btn_Upload"
        android:gravity="center"
        android:text="Show Uploads"
        android:textSize="16dp" />

</RelativeLayout>