<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemeActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_meme_rv_memes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_meme_btn_upload"
        />

    <TextView
        android:id="@+id/activity_meme_tv_Username"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-1dp"
        android:layout_toRightOf="@+id/activity_meme_btn_upload"
        android:text="Text"
        android:textSize="30dp" />

    <Button
        android:layout_centerHorizontal="true"
        android:text="Upload"
        android:id="@+id/activity_meme_btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>